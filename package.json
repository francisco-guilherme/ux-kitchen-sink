{
  "name": "ux-kitchen-sink",
  "version": "1.0.0",
  "description": "ux-kitchen-sink",
  "main": "index.js",
  "scripts": {
    "clean": "cleandir dist",
    "html": "copy 'src/*.html' dist",
    "img": "copy 'src/img/*.*' dist/img",
    "js": "copy 'src/js/*.*' dist/js",
    "sass": "npm run sass:main && npm run sass:ruby && npm run sass:saphire",
    "sass:main": "node-sass src/styles/main.scss dist/styles/main.css",
    "sass:ruby": "node-sass src/themes/ruby/main.scss dist/styles/ruby.css",
    "sass:saphire": "node-sass src/themes/saphire/main.scss dist/styles/saphire.css",
    "watch": "parallel watch:html watch:js watch:scss",
    "watch:html": "nodemon -e html -w src --exec npm run html",
    "watch:js": "nodemon -e js -w src --exec npm run js",
    "watch:scss": "nodemon -e scss -w src --exec npm run sass",
    "dist": "npm run clean && npm run html && npm run img && npm run js && npm run sass",
    "server": "npm run dist && browser-sync start -s dist -f dist",
    "dev": "parallel server watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hfigueira/ux-kitchen-sink.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hfigueira/ux-kitchen-sink/issues"
  },
  "homepage": "https://github.com/hfigueira/ux-kitchen-sink#readme",
  "devDependencies": {
    "autoprefixer": "^7.1.5",
    "browser-sync": "^2.18.13",
    "clean-dir": "^1.0.3",
    "copy": "^0.3.1",
    "node-sass": "^4.5.3",
    "nodemon": "^1.12.1",
    "npm-parallel": "^2.0.1",
    "postcss": "^6.0.13",
    "postcss-cli": "^4.1.1"
  }
}
